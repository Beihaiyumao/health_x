/* pages/user/userInfo.wxss */
.user_top{
  width: 100%;
  height: auto;
  position: relative;
}
.user_head{
  position: absolute;
  z-index: 1;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  text-align: center;
}
.user_head image{
  width: 220rpx;
  height: 220rpx;
  margin-top: 100rpx;
}
.user_head text{
  color: #ffffff;
  text-align: center;
  margin-top: 30rpx;
  display: block;
}
.mt60{
  margin-top: 120rpx;
}
.user_list{
  width: 100%;
  border-top: 1px #cccccc solid;
}
.clearfix::after{
  content: '';
  display: table;
  clear: both;
  zoom: 1;
}

.userinfo_user{
  display: block;
  width: 100%;
  padding: 30rpx 5%;
  border-top: 1px #ccc solid;
}
.userinfo_user text {
  display: inline-block;
  width: 30%;
 float: left;
 height: 60rpx;
 line-height: 60rpx;
}
.userinfo_user input{
  display: inline-block;
  width: 60%;
  border: 1px #cccccc solid;
   height: 60rpx;
 line-height: 60rpx;
}

.user_list text:nth-child(2){
  float: right;
  display: block;
  width: 10%;
  padding: 30rpx 0rpx ;
}
.user_end{
  background: green;
  color: #ffffff;
  margin: 0rpx 30% 120rpx;
  border-radius: 30rpx;
  padding: 8rpx 0rpx;
  width: 40%;
  margin-top: 140rpx;
}
.update{
  text-align: center;
  margin-top: 120rpx;
}