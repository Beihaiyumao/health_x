/* pages/user/healthArticle.wxss */
.navBar {
  border: 1px solid #ccc;
  height: 50px;
  width: 100%;
}
.likeTime{
  margin-right: 200px;
}
.healthArticle {
  margin-left: 70px;
}

.healthQuestion {
  margin-left: 110px;
}

.svmsg {
  margin-top: 50px;
}

.movie-container {
  display: flex;
  flex-direction: column;
}

.navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #a8a8a8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}

.navbar-item {
  flex: 1;
  padding: 26rpx 0px;
}

.navbar-item-active {
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}

.movie-content-wrapper {
  padding-top: 50px;
}

swiper {
  display: block;
  height: 1150rpx;
  /* margin-left: 20px;
  margin-right: 20px; */
}

.beautifule {
  margin-left: 20px;
  margin-right: 20px;
}

scroll-view {
  height: 1150rpx;
}

.list {
  width: 100%;
  border-bottom: 1px #ccc solid;
  margin-bottom: 20px;
}

.title {
  margin-top: 80rpx;
  font-size: 20px;
}

.author {
  margin-top: 30rpx;
  font-size: 15px;
  display: flex;
  justify-content: flex-end;
}

.photo {
  margin-top: 30rpx;
}

.article {
  margin-top: 30rpx;
  font-size: 15px;
  font-weight: 200;
  font-family: YouYuan;
}

swiper-item {
  margin-bottom: 20px;
}

/**隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.questionTitle {
  font-size: 20px;
  margin-top: 30rpx;
}

.questionDetail {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2; /**超过2行显示省略号**/
  -webkit-box-orient: vertical;
  font-size: 15px;
  font-weight: 200;
  font-family: YouYuan;
}

.question {
  width: 100%;
  border-bottom: 1px #ccc solid;
}

.last {
  font-size: 15px;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-top: 60px;
  font-weight: 200;
  font-family: YouYuan;
}
