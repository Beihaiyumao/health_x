<!--pages/healthArticle/healthArticleDetail.wxml-->
<view>
  <text class='title'>{{title}}\n</text>
  <text class='author'>{{author}}\n</text>
  <text class='createTime'>{{createTime}}\n</text>
  <view class='photo'>
    <image src="https://xiaoyc.com.cn/health/{{pic}}" mode='widthFix'></image>
  </view>
  <text class='content'>{{content}}</text>
  <view class='collect' bindtap='userCollect'>
    <image src='{{collectionPhoto}}' mode='widthFix'></image>
  </view>
</view>

<!-- 用户评论信息 -->

<view>
  <button class="comment " bindtap="commentBtnClick">评论</button>
  <text class='tishi'>评论一下又不要钱 </text>
  <view wx:if="{{inputComment}}">
    <textarea bindinput='comment' placeholder='请输入.....' maxlength='{{maxTextLen}}'></textarea>
    <view class='text-count-display f f-end'>{{textLen}}/{{maxTextLen}}</view>
    <button bindtap='releaseComment' class='fabu'>发布</button>
  </view>
  <view class='display' wx:if='{{comment_show}}'>
    <block wx:for="{{collectinfo}}" wx:for-item='item' wx:key='key'>
      <view class='user-nickname'>

        <image class='user-icon' src='https://xiaoyc.com.cn/health/{{item.headPhoto}}'></image>

        <text class='nickname'>{{item.userName}}</text>

      </view>

      <text class='commentDetail'>{{item.content}}</text>

      <view class='time-heart'>

        <text class='comment-time'>{{item.createTime}}</text>

      </view>
      <block wx:for='{{item.commentReply}}' wx:for-item='item' wx:key='key'>
        <text>{{item.userName}}</text>
        <text>{{item.content}}</text>
      </block>
    </block>

  </view>

  <view class='none' wx:else>
    <text>该文章还没有评论...</text>
  </view>
</view>