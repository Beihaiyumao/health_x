/*整体样式，就是黑色的容器*/

.comment_release {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 8px 0 8px 13px;
  background-color: #fff;
  font-size: 12px;
  z-index: 999;
}

/**第一个红色的容器
 *大概想法就是给flex-direction赋一个colomn的值，并列放置
 */

.comment_release .left {
  display: flex;
  flex-direction: column;
  width: 200px;
  margin-right: 20px;
}

/*输入框*/

.comment_release .text {
  width: 190px;
  min-height: 17px;
  max-height: 51px; /*最多显示三行*/
  line-height: 17px;
  font-size: 12px;
  margin-bottom: 4px;
  margin-left: 10px;
}

/*线*/

.comment_release .line {
  margin-bottom: 0;
  width: 190px;
  height: 1rpx;
  background-color: #4b5cd7;
}

/*表情图标*/

.comment_release .emoji {
  width: 24px;
  height: 24px;
  line-height: 27px;
  margin-right: 5px;
  margin-left: -15px;
}
.comment_release .share {
  width: 24px;
  height: 24px;

}
.comment_release .likeArticle{
    width: 24px;
  height: 24px;
  box-sizing: border-box;
  margin-left: 10px;
}
/*发送按钮*/

.comment_release .submit {
  width: 60px;
  height: 27px;
  line-height: 27px;
  text-align: center;
  margin-right: 10px;
  background-color: #4b5cd7;
  color: #fff;
  font-size: 12px;
  box-sizing: border-box;
  overflow: none;
}

/**隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

