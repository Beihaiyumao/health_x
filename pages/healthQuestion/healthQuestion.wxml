<!--pages/healthQuestion/healthQuestion.wxml-->
<!--搜索框-->
<view>
     <view>
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
            <!-- 搜索框 -->
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" bindinput='search_title'maxlength='15'bindconfirm="searchQuestion" class="weui-search-bar__input" placeholder="请输入问题名称"/>
                </view>
            </view>
            <!-- 搜索按钮,调用搜索查询方法 -->
            <view class="weui-search-bar__cancel-btn" bindtap='searchQuestion'>搜索</view>
        </view>
    </view>
</view>
<block wx:for="{{questionList}}" wx:for-item='item' wx:key='key'>
  <view class='user-nickname'>
    <!--<text class='nickname'>{{item.questionId}}\n</text>-->
    <!--<text class='nickname'>{{item.userId}}\n</text>-->
  </view>
  <text class='commentDetail'>{{item.title}}\n</text>
  <text class='questionDetail'>{{item.detail}}\n</text>
  <!--<view class='time-heart'>
    <text class='comment-time'>{{item.createTime}}</text>
    <image class='heart-icon' src=''></image>
  </view>-->
</block>
<text class="last" style="position:fixed; bottom:0;width: 750rpx;" wx:if="{{isLast}}">我也是有底线的</text>
<!--增加按钮-->
<view bindtap='addHealthQuestion'>
  <image class="add_icon" src="/images/index/add.png"></image>
</view>